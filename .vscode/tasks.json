{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Scrapy Spider",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "scrapy",
                "runspider",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
